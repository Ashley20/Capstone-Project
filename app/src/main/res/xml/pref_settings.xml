<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/category_pref_discovery">

        <Preference
            android:selectable="false"
            android:title="@string/pref_show_me" />

        <SwitchPreference
            android:defaultValue="@bool/default_show_me_gender_girl"
            android:key="@string/key_gender_girl"
            android:title="@string/gender_girl" />

        <SwitchPreference
            android:defaultValue="@bool/default_show_me_gender_boy"
            android:key="@string/key_gender_boy"
            android:title="@string/gender_boy" />


        <Preference
            android:layout="@layout/item_divider"
            android:selectable="false" />


        <ListPreference
            android:defaultValue="@string/default_pet_type"
            android:dialogTitle="@string/dialog_title_select_type"
            android:entries="@array/pref_select_type_entries"
            android:entryValues="@array/pref_select_type_values"
            android:key="@string/key_select_type"
            android:summary="%s"
            android:title="@string/title_select_type" />


        <Preference
            android:layout="@layout/item_divider"
            android:selectable="false" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_pet_adoption_state"
            android:key="@string/key_adoption_state"
            android:summaryOff="@string/summary_off_adoption_state"
            android:summaryOn="@string/summary_on_adoption_state"
            android:title="@string/title_adoption_state" />


    </PreferenceCategory>

</PreferenceScreen>