<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="@dimen/widget_image_view_width"
            android:layout_height="@dimen/widget_image_view_height"
            android:id="@+id/update_icon"
            android:src="@drawable/ic_update"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/widget_image_view_margin_top"
            android:layout_marginRight="@dimen/widget_image_view_margin_right"
            android:contentDescription="@string/upload_icon"
            android:layout_marginEnd="@dimen/widget_image_view_margin_right" />

    </LinearLayout>


    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_list_view_margin_top">
    </ListView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_view"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/widget_empty_view_text_size" />

</FrameLayout>