<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_container_layout"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/custom_profile_image_size"
        android:layout_height="@dimen/custom_profile_image_size"
        android:id="@+id/custom_message_profile_pic"
        app:civ_fill_color="@color/colorPrimaryText"
        android:src="@drawable/profile_icon"/>

    <TextView
        android:id="@+id/message_text_view"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:background="@drawable/message_text_background"
        android:padding="@dimen/message_text_view_padding"
        android:text="@string/message"
        android:textColor="@color/colorWhite"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_text_view"
        android:layout_below="@+id/custom_message_profile_pic"
        android:text="@string/date"
        android:layout_alignLeft="@+id/message_text_view" />


</RelativeLayout>