<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_container"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/message_text_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_text_view"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/message_tv_margin_right"
            android:layout_marginRight="@dimen/message_tv_margin_right"
            android:padding="@dimen/message_text_view_padding"
            android:text="@string/message"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/message_date_margin_right"
            android:layout_marginRight="@dimen/message_date_margin_right"
            android:text="@string/date"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <ImageView
        android:id="@+id/upload_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/upload_image" />

</RelativeLayout>